---
export interface Props {
  title: string;
  description: string;
  name: string;
  /* link?: string; */
  profile: string;
}

const { title, description, name, /* link, */ profile } = Astro.props;
---

<div
  class="h-[380px] md:h-[320px] lg:h-[410px] flex-1 p-6 bg-white rounded-[45px] shadow-card border border-zinc-900 flex-col justify-start items-start gap-2.5 inline-flex text-black"
>
  <div class="flex-col justify-start items-start gap-5 flex">
    <div class="justify-start items-start">
      <div class="h-[100px] justify-between items-center flex w-full gap-4">
        <div
          style={{ backgroundImage: `url(${profile})` }}
          class="w-[90px] h-[100px] bg-cover bg-center customBorder"
        >
          <!-- <img
            class="object-cover w-full h-full object-center customColor"
            src={profile}
            alt={name}
          /> -->
        </div>
        <div class="w-[60%] flex-col justify-end items-start inline-flex">
          <div class="text-lg font-normal">{title}</div>
          <div class="text-xl font-medium">{name}</div>
        </div>
      </div>
      <!-- <a
        class="top-0 right-0"
        href={link}
      >
        <img
          src="/team/lng.svg"
          alt="vector"
        />
      </a> -->
    </div>
    <span class="w-full border border-black"></span>
    <p class="text-lg">{description}</p>
  </div>
</div>

<style>
  .customBorder {
    overflow: hidden;
    background-color: brown;
    border-radius: 33% 67% 38% 62% / 70% 35% 65% 30%;
    border-image: fill 1
      linear-gradient(0deg, #aa8abf41 100%, rgba(255, 255, 255, 0) 100%);
  }
</style>
