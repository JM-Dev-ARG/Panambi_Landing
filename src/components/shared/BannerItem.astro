---
export interface Props {
  className?: string;
  text: string;
  textColor?: string;
}

const { className, text, textColor } = Astro.props;
---

<div
  class=`flex items-center justify-start md:justify-center  gap-2 md:gap-1 w-full md:w-auto   ${className} ${textColor}`
>
  <img
    class="h-[30px] xl:h-[40px]"
    src="./img/tilde.avif"
    alt=""
  />
  <p class="text-xl md:text-base lg:text-xl xl:text-2xl font-semibold">
    {text}
  </p>
</div>
