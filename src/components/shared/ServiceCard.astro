---
export interface Props {
  background: string;
  textColor: string;
  name1: string;
  name2: string;
  arrow?: string;
  link?: string;
  image: string;
}

const { background, name1, name2, arrow, link, image, textColor } = Astro.props;
---

<div
  style={`background-color: ${background};`}
  class=`h-[310px] p-6 md:p-12 rounded-[45px] shadow-card border border-black justify-between items-center flex ${textColor}`
>
  <div class="flex-col justify-center items-start gap-[93px] inline-flex">
    <div class="flex-col justify-start items-start flex">
      <div
        class="px-[7px] rounded-[7px] flex-col justify-start items-start gap-2.5 flex"
      >
        <div class="text-3xl font-medium">{name1}</div>
      </div>
      <div
        class="px-[7px] rounded-[7px] flex-col justify-start items-start gap-2.5 flex"
      >
        <div class="text-3xl font-medium">{name2}</div>
      </div>
    </div>
    {
      /*                   <a
                    class="justify-start items-center gap-[15px] inline-flex"
                    href={link}
                  >
                    <div class="w-[41px] h-[41px] relative">
                      <img
                        class="w-[41px] h-[41px] left-0 top-0 absolute"
                        src={arrow}
                      />
                    </div>
                    <div class="text-xl font-normal leading-7">Learn more</div>
                  </a> */
    }
  </div>
  <div
    class="w-[210px] h-[170px] pt-0.5 pb-[1.95px] justify-center items-center flex"
  >
    <img src={image} />
  </div>
</div>
