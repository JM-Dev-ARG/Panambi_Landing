---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html
  lang="es"
  id="inicio"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Astro description"
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="./svg/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Panambi - Mkt Digital y Desarrollo Web</title>
    <meta
      name="description"
      content="A beautiful and functional landing page design created specifically for digital marketing agencies. With its clean and modern design, Positivus is the perfect template to showcase your agency's services and case studies to potential clients. Built with astro and tailwindcss"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body class="bg-white font-Poppins">
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

      html {
        scroll-behavior: smooth;
        font-family: "Poppins", sans-serif;
        ::-webkit-scrollbar {
          width: 8px;
        }

        ::-webkit-scrollbar-track {
          background: #f9f9f9;
        }

        ::-webkit-scrollbar-thumb {
          background: #6b4494;
        }

        ::-webkit-scrollbar-thumb:hover {
          background: #857993;
        }
      }
    </style>
  </body>
</html>
